<br>
<div class="row">
  <% @published_articles.each do |article| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card" style="">
        <%= image_tag article.cover_image.url(:medium), class: 'card-img-top' %>
        <div class="card-block">
          <h4 class="card-title"><%= link_to "#{article.title}", article_path(article) %></h4>
          <%= link_to "#{article.description}", article_path(article) %>
        </div>
      </div>
    </div>

  <% end %>
</div>
