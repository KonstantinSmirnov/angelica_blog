<%= simple_form_for [:admin, @category] do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>

  <%= f.submit 'Save', class: 'btn btn-outline-primary' %>
  <%= link_to 'Delete', admin_category_path(@category), class: 'btn btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } if @category.persisted? %>
<% end %>
